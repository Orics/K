<UserControl x:Class="CHAT_WPF.GUIs.StickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             gif:ImageBehavior.AnimateInDesignMode="True"
             xmlns:local="clr-namespace:CHAT_WPF.GUIs"
             mc:Ignorable="d">

    <Border x:Name="StickerBorder" MouseEnter="_Event_StickerBorder_MouseEnter" MouseLeave="_Event_StickerBorder_MouseLeave" Width="80" Height="80" Margin="2" BorderThickness="1">
        <Image x:Name="StickerContent" gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AutoStart="True" MouseLeftButtonDown="_Event_Image_MouseLeftButtonDown"/>
    </Border>
</UserControl>
