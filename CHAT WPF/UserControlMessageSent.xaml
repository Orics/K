<UserControl x:Class="CHAT_WPF.UserControlMessageSent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CHAT_WPF"
             mc:Ignorable="d">
    <Border Background="{StaticResource PrimaryHueDarkBrush}" MaxWidth="600" Margin="5 5 20 20" CornerRadius="5">
        <Grid x:Name="MessageBox">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel x:Name="MessageImagesContainer" Grid.Row="0" Orientation="Vertical">

            </StackPanel>
            <StackPanel x:Name="MessageFilesContainer" Grid.Row="1" Orientation="Horizontal">

            </StackPanel>
            <Border x:Name="MessageBorder" Grid.Row="2">
                <TextBlock x:Name="Content" Margin="15 10" TextWrapping="Wrap" Text="~~~~~~~~~~~~~~~~~~~" FontSize="15" Foreground="White"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
